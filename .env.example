# 환경 설정
NODE_ENV=development
PORT=8000
HOST=0.0.0.0

# LLM API 키 (실제 사용 시 설정 필요)
OPENAI_API_KEY=sk-your-openai-api-key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key
GOOGLE_API_KEY=your-google-api-key

# 저장소 설정
STORAGE_PATH=./data

# 보안
SECRET_KEY=your-secret-key-change-this-in-production
FERNET_KEY=your-fernet-key-for-encryption

# 로깅
LOG_LEVEL=info

# WebSocket
WS_PORT=8000

# LangFlow 통합 (선택사항)
LANGFLOW_ENABLED=false
LANGFLOW_API_URL=http://localhost:7860

# 벡터 데이터베이스 (향후 확장)
VECTOR_DB_ENABLED=false
VECTOR_DB_URL=

# 모니터링 (선택사항)
SENTRY_DSN=
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090

# 데이터베이스 (향후 전환 시)
DATABASE_URL=postgresql://user:password@localhost:5432/automation_platform

# Redis (캐싱용, 선택사항)
REDIS_URL=redis://localhost:6379

# 개발용 설정
DEVELOPMENT_MODE=true
DEBUG_MCP=false
DEBUG_LLM=false
DEBUG_WORKFLOW=false

# 성능 설정
MAX_CONCURRENT_WORKFLOWS=50
MAX_WEBSOCKET_CONNECTIONS=1000
MAX_MCP_CONNECTIONS=100

# LLM 비용 제한
DAILY_LLM_COST_LIMIT=100
MONTHLY_LLM_COST_LIMIT=1000

# 타임아웃 설정 (밀리초)
REQUEST_TIMEOUT=30000
WORKFLOW_TIMEOUT=300000
DEVICE_CONNECTION_TIMEOUT=10000
MCP_TIMEOUT=15000

# 기능 플래그
FEATURE_DEVICE_DISCOVERY=true
FEATURE_AUTO_WORKFLOW=true
FEATURE_BATCH_OPERATIONS=true
FEATURE_SCHEDULING=false

# 클러스터 설정 (향후)
CLUSTER_MODE=false
CLUSTER_NODE_ID=node-1
CLUSTER_REDIS_URL=redis://localhost:6379

# 백업 설정 (향후)
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# 알림 설정 (향후)
NOTIFICATION_WEBHOOK_URL=
SLACK_WEBHOOK_URL=
EMAIL_SMTP_HOST=
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=
EMAIL_PASSWORD=

# 보안 강화 (향후)
JWT_SECRET=your-jwt-secret
JWT_EXPIRES_IN=7d
ENABLE_2FA=false
SSO_ENABLED=false
SSO_PROVIDER=
SSO_CLIENT_ID=
SSO_CLIENT_SECRET=